# ===================
# PostgreSQL (shared)
# ===================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-postgres-admin-password

# Leaknote database credentials
LEAKNOTE_DB_PASSWORD=change-this-leaknote-password

# Dendrite database credentials
DENDRITE_DB_PASSWORD=change-this-dendrite-password

# ===================
# Dendrite Matrix Server
# ===================
# Your Matrix domain (used in user IDs like @user:domain)
MATRIX_SERVER_NAME=localhost

# ===================
# Matrix Bot Configuration
# ===================
# Bot user credentials (create this user after setup)
MATRIX_USER_ID=@leaknote:localhost
MATRIX_PASSWORD=bot-password-here
MATRIX_INBOX_ROOM=#leaknote-inbox:localhost

# Your user (receives digests)
DIGEST_TARGET_USER=@yourname:localhost

# ===================
# LLM APIs
# ===================
# GLM-4 (classification - cheap, fast)
GLM_API_URL=https://api.z.ai/v1/chat/completions
GLM_API_KEY=your-glm-api-key
GLM_MODEL=glm-4

# Claude (summaries - quality matters)
CLAUDE_API_URL=https://api.anthropic.com/v1/messages
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-sonnet-4-20250514

# ===================
# Settings
# ===================
CONFIDENCE_THRESHOLD=0.6
